<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>CRUD de Clientes</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f7fa;
      padding: 40px;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #007BFF;
    }

    table {
      border-collapse: collapse;
      width: 90%;
      margin: 20px auto;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 12px 16px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    th {
      background: #007BFF;
      color: white;
    }

    tr:hover {
      background: #f1f1f1;
    }

    .actions button {
      margin-right: 5px;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      color: white;
    }

    .edit-btn {
      background: #17a2b8;
    }

    .delete-btn {
      background: #dc3545;
    }

    .new-btn {
      display: block;
      width: 200px;
      margin: 20px auto;
      background: #28a745;
      color: white;
      padding: 10px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 999;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0,0,0,0.4);
      padding-top: 80px;
    }

    .modal-contenido {
      background-color: #fff;
      margin: auto;
      padding: 30px;
      border-radius: 8px;
      width: 90%;
      max-width: 500px;
      position: relative;
    }

    .cerrar {
      position: absolute;
      top: 15px;
      right: 20px;
      font-size: 28px;
      font-weight: bold;
      color: #aaa;
      cursor: pointer;
    }

    .cerrar:hover {
      color: #000;
    }

    form label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }

    form input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    form button {
      background: #28a745;
      color: white;
      border: none;
      padding: 10px;
      margin-top: 20px;
      width: 100%;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    form button:hover {
      background: #218838;
    }
  </style>
</head>
<body>
  <h1>Lista de Clientes</h1>

  <button id="btnAbrirModal" class="new-btn">‚ûï Nuevo Cliente</button>

  <table>
    <thead>
      <tr>
        <th>Correo</th>
        <th>Fecha Registro</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% clientes.forEach(cliente => { %>
        <tr>
          <td><%= cliente.correo %></td>
          <td><%= new Date(cliente.fechaRegistro).toLocaleDateString() %></td>
          <td class="actions">
            <button class="edit-btn" onclick="abrirModalEditar('<%= cliente._id %>', '<%= cliente.correo %>')">‚úèÔ∏è Editar</button>
            <form action="/clientes/<%= cliente._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="delete-btn" onclick="return confirm('¬øEliminar este cliente?')">üóëÔ∏è Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Modal Crear Cliente -->
  <div id="modalNuevoCliente" class="modal">
    <div class="modal-contenido">
      <span class="cerrar">&times;</span>
      <h2>Nuevo Cliente</h2>
      <form action="/clientes" method="POST">
        <label>Correo:</label>
        <input type="email" name="correo" required />

        <label>Contrase√±a:</label>
        <input type="password" name="contrasena" required minlength="6" />

        <button type="submit">Crear</button>
      </form>
    </div>
  </div>

  <!-- Modal Editar Cliente -->
  <div id="modalEditarCliente" class="modal">
    <div class="modal-contenido">
      <span class="cerrar" onclick="cerrarModalEditar()">&times;</span>
      <h2>Editar Cliente</h2>
      <form id="formEditarCliente" method="POST">
        <input type="hidden" name="_method" value="PUT" />

        <label>Correo:</label>
        <input type="email" name="correo" id="editarCorreo" required />

        <label>Nueva Contrase√±a:</label>
        <input type="password" name="contrasena" required minlength="6" />

        <button type="submit">Guardar Cambios</button>
      </form>
    </div>
  </div>

  <script>
    const modal = document.getElementById("modalNuevoCliente");
    const btn = document.getElementById("btnAbrirModal");
    const cerrarBtn = document.getElementsByClassName("cerrar")[0];

    btn.onclick = () => modal.style.display = "block";
    cerrarBtn.onclick = () => modal.style.display = "none";
    window.onclick = e => {
      if (e.target === modal) modal.style.display = "none";
    };

    function abrirModalEditar(id, correo) {
      document.getElementById("modalEditarCliente").style.display = "block";
      document.getElementById("editarCorreo").value = correo;
      document.getElementById("formEditarCliente").action = `/clientes/${id}?_method=PUT`;
    }

    function cerrarModalEditar() {
      document.getElementById("modalEditarCliente").style.display = "none";
    }
  </script>
</body>
</html>
