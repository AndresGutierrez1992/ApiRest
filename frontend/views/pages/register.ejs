<head>
    <%- include('../partials/head') %>
</head>

<div class="container mt-5 mb-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-lg p-4 border-0 rounded-3">
                <div class="card-header text-center bg-white border-0">
                    <h5 class="card-title fw-bold">Registrarse</h5>
                </div>
                <div class="card-body">
                    <form action="gestionClientesPublico" method="post" class="formulario">

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope-lock"></i> Ingrese su correo electrónico
                            </label>
                            <input type="email" class="form-control" name="correo" id="email"
                                placeholder="Correo electrónico" required>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-key"></i> Ingrese su contraseña
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="contrasena" id="password"
                                    placeholder="Contraseña" required minlength="6">
                                <span class="input-group-text"><i class="bi bi-eye"></i></span>
                            </div>

                            <label for="passwordVerify" class="form-label mt-2">
                                <i class="bi bi-key"></i> Verifique su contraseña
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="passwordVerify" id="passwordVerify"
                                    placeholder="Verifique contraseña" required minlength="6">
                                <span class="input-group-text"><i class="bi bi-eye"></i></span>
                            </div>
                        </div>

                        <!-- Redes sociales -->
                        <div class="mb-3 text-center">
                            <span class="mb-2 d-block" style="color: black;">También puedes registrarte con:</span>
                            <a class="btn text-white btn-floating m-1" style="background-color: #3b5998;"
                                href="https://www.facebook.com" role="button" aria-label="Ir a Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn text-white btn-floating m-1" style="background-color: #dd4b39;"
                                href="https://mail.google.com" role="button" aria-label="Ir a Google">
                                <i class="fab fa-google"></i>
                            </a>
                            <a class="btn text-white btn-floating m-1" style="background-color: #0082ca;"
                                href="https://www.linkedin.com" role="button" aria-label="Ir a LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="condiciones" required>
                            <label class="form-check-label" for="condiciones">
                                Aceptar Términos y condiciones
                            </label>
                        </div>

                        <!-- Botón -->
                        <button type="submit" class="btn btn-primary w-100 mt-3" id="registro">
                            Registrarse
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/gestionClientes.js"></script>

<footer>
    <%- include('../partials/footer') %>
</footer>

<%- include('../partials/toast') %>
